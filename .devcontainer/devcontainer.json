{
  "name": "ServiceNow MCP Workflow",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/sample-workflow/servicenow-mcp/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "cd /workspaces/sample-workflow/servicenow-mcp && [ -d .venv ] && (.venv/bin/pip install -q --upgrade pip && .venv/bin/pip install -q -e . && .venv/bin/pip install -q python-dotenv boto3 flask flask-cors bcrypt) || (python3 -m venv .venv && .venv/bin/pip install -q --upgrade pip && .venv/bin/pip install -q -e . && .venv/bin/pip install -q python-dotenv boto3 flask flask-cors bcrypt)",
  "postAttachCommand": "cd /workspaces/sample-workflow/servicenow-mcp && source .venv/bin/activate",
  
  "remoteEnv": {
    "SERVICENOW_INSTANCE_URL": "${localEnv:SERVICENOW_INSTANCE_URL}",
    "SERVICENOW_USERNAME": "${localEnv:SERVICENOW_USERNAME}",
    "SERVICENOW_PASSWORD": "${localEnv:SERVICENOW_PASSWORD}",
    "SERVICENOW_AUTH_TYPE": "basic",
    "AWS_PROFILE": "default",
    "AWS_DEFAULT_REGION": "us-east-1",
    "AWS_ACCESS_KEY_ID": "${localEnv:AWS_ACCESS_KEY_ID}",
    "AWS_SECRET_ACCESS_KEY": "${localEnv:AWS_SECRET_ACCESS_KEY}",
    "FASTMCP_LOG_LEVEL": "INFO"
  },

  "mounts": [
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
  ],

  "forwardPorts": [8000, 5000, 3000],

  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  }
}
